server {
    listen 80;
    server_name mern-docker.com;
    
    location / {
        proxy_pass http://frontend:3000;
    }

    location /api {
        proxy_pass http://api:3001;
        rewrite ^/api/(.*) /$1 break;
    }

    location /auth {
        proxy_pass http://auth:3002;
        rewrite ^/auth/(.*) /$1 break;
    }

    location /mailer {
        proxy_pass http://mailer:8080;
        rewrite ^/mailer/(.*) /$1 break;
    }
}
